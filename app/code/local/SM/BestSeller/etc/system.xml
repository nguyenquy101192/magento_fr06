<?xml version="1.0"?>
<config>
    <sections>
        <best_seller translate="label" module="best_seller">
            <label>Best Sellers</label>
            <tab>sm</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1003</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <set_date translate="label">
                    <label>Set date time</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <from_date translate="label">
                            <label>From Date</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>sm_best_seller/adminhtml_system_config_date</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </from_date>
                        <to_date translate="label">
                            <label>To Date</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>sm_best_seller/adminhtml_system_config_date</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </to_date>
                    </fields>
                </set_date>
                <config translate="label">
                    <label>Config slide</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <number translate="label">
                            <label>Number products in slide</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>2</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number>
                        <auto translate="label">
                            <label>Auto play slide</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto>
                        <status translate="label">
                            <label>Is active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </status>
                    </fields>
                </config>
            </groups>
        </best_seller>
    </sections>
</config>