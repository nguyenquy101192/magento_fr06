    <adminhtml>
        <layout>
            <updates>
                <sm_product_label>
                    <file>sm/product_label.xml</file>
                </sm_product_label>
            </updates>
        </layout>
        <menu>
            <sm>
                <title>SM</title>
                <sort_order>91</sort_order>
                <children>
                    <product_label translte="title" module="product_label">
