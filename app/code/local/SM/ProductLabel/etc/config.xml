        <helpers>
            <product_label>
                <class>SM_ProductLabel_Helper</class>
            </product_label>
        </helpers>
        <models>
            <label>
                <class>SM_ProductLabel_Model</class>
                <resourceModel>label_resource</resourceModel>
            </label>
            <label_resource>
                <class>SM_ProductLabel_Model_Resource</class>
                <entities>
                    <label>
                        <table>sm_product_label</table>
                    </label>
                </entities>
            </label_resource>
        </models>
        <resources>
            <sm_product_label_setup>
                <setup>
                    <module>SM_ProductLabel</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sm_product_label_setup>
            <sm_product_label_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sm_product_label_write>
            <sm_product_label_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sm_product_label_read>
        </resources>
    </global>
