<?xml version="1.0"?>
<config>
    <sections>
        <product_label translate="label" module="product_label">
            <label>Product Label</label>
            <tab>sm</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1005</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <label translate="label">
                            <label>Label</label>
                            <frontend_type>select</frontend_type>
                            <source_model>label/source_label</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </label>
                        <sale_label_image translate="label">
                            <label>Choose image for sale label</label>
                            <frontend_type>select</frontend_type>
                            <source_model>label/source_image_sale</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <label>sale_label</label>
                            </depends>
                        </sale_label_image>
                        <best_seller_label_image translate="label">
                            <label>Choose image for best seller label</label>
                            <frontend_type>select</frontend_type>
                            <source_model>label/source_image_best</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <label>best_seller_label</label>
                            </depends>
                        </best_seller_label_image>
                        <featured_label_image translate="label">
                            <label>Choose image for featured label</label>
                            <frontend_type>select</frontend_type>
                            <source_model>label/source_image_featured</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <label>featured_label</label>
                            </depends>
                        </featured_label_image>
                        <new_label_image translate="label">
                            <label>Choose image for new label</label>
                            <frontend_type>select</frontend_type>
                            <source_model>label/source_image_new</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <label>new_label</label>
                            </depends>
                        </new_label_image>
                        <status translate="label">
                            <label>Is active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </status>
                    </fields>
                </config>
            </groups>
        </product_label>
    </sections>
</config>