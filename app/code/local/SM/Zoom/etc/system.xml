<?xml version="1.0"?>
<config>
    <sections>
        <sm_zoom translate="label" module="sm_zoom">
            <label>Zoom Image</label>
            <tab>sm</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1006</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <zoom_in translate="label">
                            <label>Zoom in</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zoom_in>
                        <opacity translate="label">
                            <label>Opcity</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </opacity>
                        <size translate="label">
                            <label>Resize image</label>
                            <frontend_type>text</frontend_type>
                            <comment>
                                <![CDATA[<span class="notice">ex: 400 = 400px x 400px</span>]]>
                            </comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </size>
                        <status translate="label">
                            <label>Is active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </status>
                    </fields>
                </config>
            </groups>
        </sm_zoom>
    </sections>
</config>